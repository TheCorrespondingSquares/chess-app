<div class="row text-center">
  <div class="columns container">
    <h1 id="gameId" data-game-id="<%= @game.id %>"><%= @game.name %></h1>
    <br />
    <table id="board" class="center">
      <% 8.times do |row| %>
        <tr>
        <% 8.times do |col| %>
          <% if (row + col) % 2 == 0 %>
          <% piece = @pieces.where(x_pos: col, y_pos: row).first %>
            <td class="black_tile" data-x-pos="<%= col %>" data-y-pos="<%= row %>">
              <% row %>  
                <% if piece.present? %>
                  <%= piece.icon.html_safe %>

                <% end %>
              <% col %>
            </td>
          <% else %>
            <td class="white_tile" data-x-pos="<%= col %>" data-y-pos="<%= row %>">
              <% row %>
                <% piece = @pieces.where(x_pos: col, y_pos: row).first %>
                <% if piece.present? %>
                  <%= piece.icon.html_safe %>

                <% end %>
              <% col %>
            </td>
          <% end %>
        <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
