<div class="row text-center">
  <div class="columns container">
    <h1><%= @game.name %></h1>
    <br />
    <table id="board" class="center">
      <% 8.times do |row| %>
        <tr>
        <% 8.times do |col| %>
          <% if (row + col) % 2 == 0 %>
          <% piece = @pieces.where(x_pos: col, y_pos: row).first %>
            <td class="black_tile">
              <% row %>  
                <% if piece.blank? == false %>
                  <div class="piece" data-piece-id="<%= piece.id %>" data-x-pos="<%= row %>" data-y-pos="<%= col %>"><%= piece.name %></div>
                <% end %>
              <% col %>
            </td>
          <% else %>
            <td class="white_tile">
              <% row %>
                <% piece = @pieces.where(x_pos: col, y_pos: row).first %>
                <% if piece.blank? == false %>
                  <div class="piece" data-piece-id="<%= piece.id %>" data-x-pos="<%= row %>" data-y-pos="<%= col %>"><%= piece.name %></div>
                <% end %>
              <% col %>
            </td>
          <% end %>
        <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
    