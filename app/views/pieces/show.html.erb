<div class="row text-center">
  <div class="columns container">
    <h1><%= @game.name %></h1>
    <br />
    <table class="center">
      <% 8.times do |row| %>
        <tr>
        <% 8.times do |col| %>
          <% if (row + col) % 2 == 0 %>
            <td class="black_tile">
              <% row %>
              	<% if @piece.x_pos == col && @piece.y_pos == row %>  
	                <div class="flash"><%= @piece.name %></div>
	              <% end %>
                <% other_piece = @game.pieces.where(x_pos: col, y_pos: row).first %>
                <% if other_piece != @piece && other_piece.blank? == false %>
                  <%= other_piece.name %>
                <% end %>
              <% col %>
            </td>
          <% else %>
            <td class="white_tile">
              <% row %>
              	<% if @piece.x_pos == col && @piece.y_pos == row %>  
	                <div class="flash"><%= @piece.name %></div>
	              <% end %>
                <% other_piece = @game.pieces.where(x_pos: col, y_pos: row).first %>
                <% if other_piece != @piece && other_piece.blank? == false %>
                  <%= other_piece.name %>
                <% end %>
              <% col %>
            </td>
          <% end %>
        <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>