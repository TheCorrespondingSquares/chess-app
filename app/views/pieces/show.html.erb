<div class="row text-center">
  <div class="columns container">
    <h1><%= @game.name %></h1>
    <br />
    <table id="board" class="center">
      <% 8.times do |row| %>
        <tr>
        <% 8.times do |col| %>
          <% if (row + col) % 2 == 0 %>
            <td class="black_tile flash" data-piece-id="<%= @piece.id %>" data-x-pos="<%= row %>" data-y-pos="<%= col %>">
              <% row %>
              	<% if @piece.x_pos == col && @piece.y_pos == row %>  
	                <%= @piece.name %>
	              <% end %>
              <% col %>
            </td>
          <% else %>
            <td class="white_tile flash" data-piece-id="<%= @piece.id %>" data-x-pos="<%= row %>" data-y-pos="<%= col %>">
              <% row %>
              	<% if @piece.x_pos == col && @piece.y_pos == row %>  
	                <%= @piece.name %>
	              <% end %>
              <% col %>
              <% col %>
            </td>
          <% end %>
        <% end %>
        </tr>
      <% end %>
    </table>
   
  </div>
</div>